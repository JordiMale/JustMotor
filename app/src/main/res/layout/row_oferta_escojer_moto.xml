<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="false"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="139dp"
        android:layout_height="207dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Imagen_moto_Filtro_Escoger"
            android:layout_width="match_parent"
            android:layout_height="119dp" />

        <ImageView
            android:id="@+id/Cojer_Id"
            android:layout_width="94dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:src="@drawable/agregar" />

    </LinearLayout>


    <Space
        android:layout_width="19dp"
        android:layout_height="207dp" />

    <LinearLayout
        android:layout_width="254dp"
        android:layout_height="207dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Oferta_Nombre_Marca_Filtro_Escoger"
            android:layout_width="match_parent"
            android:layout_height="31dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="11dp" />

        <TextView
            android:id="@+id/Oferta_Nombre_Modelo_Filtro_Escoger"
            android:layout_width="match_parent"
            android:layout_height="31dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="11dp" />

        <TextView
            android:id="@+id/Oferta_Precio_Filtro_Escoger"
            android:layout_width="match_parent"
            android:layout_height="31dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="11dp" />

        <TextView
            android:id="@+id/Oferta_Data_Entrada_Filtro_Escoger"
            android:layout_width="match_parent"
            android:layout_height="31dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="11dp" />

        <TextView
            android:id="@+id/Oferta_Activa_Filtro_Escoger"
            android:layout_width="match_parent"
            android:layout_height="31dp" />


    </LinearLayout>




</LinearLayout>
