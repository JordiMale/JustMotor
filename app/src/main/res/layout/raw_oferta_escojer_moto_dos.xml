                android:textColor="#000000" />

            <TextView
                android:id="@+id/Oferta_Nombre_Modelo_Filtro_Escoger2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:autoSizeTextType="uniform" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="11dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginLeft="2dp"
                android:autoSizeTextType="uniform"
                android:text="PRECIO: "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/Oferta_Precio_Filtro_Escoger2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:autoSizeTextType="uniform" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="11dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginLeft="2dp"
                android:autoSizeTextType="uniform"
                android:text="DATA ENTRADA: "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/Oferta_Data_Entrada_Filtro_Escoger2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:autoSizeTextType="uniform" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="11dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginLeft="2dp"
                android:autoSizeTextType="uniform"
                android:text="ESTADO: "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/Oferta_Activa_Filtro_Escoger2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:autoSizeTextType="uniform" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="11dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginLeft="2dp"
                android:autoSizeTextType="uniform"
                android:text="GMAIL: "
                android:textColor="#000000" />

            <TextView
                android:id="@+id/Oferta_Gmail_Filtro_Escoger2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:autoSizeTextType="uniform" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
